<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="580dp"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/bottom_sheet_shape"
    android:orientation="vertical"
    android:padding="16dp"
    tools:layout_editor_absoluteX="39dp"
    tools:layout_editor_absoluteY="717dp"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <EditText
        android:id="@+id/login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/edit_shape"
        android:textColor="@color/white"
        android:textColorHint="@color/hint_text"
        android:fontFamily="@font/manrope_medium"
        android:hint="Логин"
        android:padding="14dp"
        android:textSize="14sp"
        android:layout_marginTop="24dp"
        android:gravity="center_vertical"
        android:inputType="text" />

    <EditText
        android:id="@+id/email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/edit_shape"
        android:textColor="@color/white"
        android:textColorHint="@color/hint_text"
        android:fontFamily="@font/manrope_medium"
        android:hint="Электронная почта"
        android:padding="14dp"
        android:textSize="14sp"
        android:layout_marginTop="8dp"
        android:gravity="center_vertical"
        android:inputType="textEmailAddress" />

    <EditText
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/edit_shape"
        android:textColor="@color/white"
        android:textColorHint="@color/hint_text"
        android:fontFamily="@font/manrope_medium"
        android:hint="Имя"
        android:padding="14dp"
        android:textSize="14sp"
        android:layout_marginTop="8dp"
        android:gravity="center_vertical"
        android:inputType="text" />

    <EditText
        android:id="@+id/password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/edit_shape"
        android:textColor="@color/white"
        android:textColorHint="@color/hint_text"
        android:fontFamily="@font/manrope_medium"
        android:hint="Пароль"
        android:padding="14dp"
        android:textSize="14sp"
        android:layout_marginTop="8dp"
        android:gravity="center_vertical"
        android:inputType="textPassword" />

    <EditText
        android:id="@+id/passwordRepeat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/edit_shape"
        android:textColor="@color/white"
        android:textColorHint="@color/hint_text"
        android:fontFamily="@font/manrope_medium"
        android:padding="14dp"
        android:textSize="14sp"
        android:layout_marginTop="8dp"
        android:gravity="center_vertical"
        android:hint="Подтвердите пароль"
        android:inputType="textPassword" />

    <EditText
        android:id="@+id/date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/edit_shape"
        android:textColor="@color/white"
        android:textColorHint="@color/hint_text"
        android:fontFamily="@font/manrope_medium"
        android:hint="Дата рождения"
        android:padding="14dp"
        android:textSize="14sp"
        android:drawableEnd="@drawable/date"
        android:drawableTint="@color/hint_text"
        android:layout_marginTop="8dp"
        android:gravity="center_vertical"
        android:inputType="date" />

    <LinearLayout
        android:layout_width="379dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="20dp"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/man"
            android:layout_width="181dp"
            android:layout_height="58dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/orange_sex_gradient_left"
            android:backgroundTint="@null"
            android:fontFamily="@font/manrope_bold"
            android:gravity="center"
            android:text="Мужчина"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/woman"
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/default_sex_shape_right"
            android:backgroundTint="@null"
            android:fontFamily="@font/manrope_bold"
            android:gravity="center"
            android:text="Женщина"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="16sp" />
    </LinearLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnReg"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginBottom="16dp"
        android:backgroundTint="@null"
        android:fontFamily="@font/manrope_bold"
        android:gravity="center"
        android:paddingTop="6dp"
        android:paddingBottom="6dp"
        android:textAllCaps="false"
        android:text="Зарегистрироваться"
        android:textColor="@color/hint_text"
        android:textSize="16sp"
        />
</LinearLayout>